<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout 
     xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >


<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mllButton1"
    android:layout_alignParentBottom="true"
    android:orientation="vertical"
    android:background="@color/white"
    >
    
   
       <LinearLayout 
     	            android:id="@+id/ll31"
	     	        android:layout_width="fill_parent"
	     	        android:layout_height="wrap_content"
	     	        android:gravity="center"
	     	        style="?android:attr/actionButtonStyle"
	     	        android:background="@drawable/layout_ontouch2">
	     	            
	     	            <EditText 
	     	                android:layout_width="fill_parent"
	     	                android:layout_height="wrap_content"
	     	                android:hint="192.168.1.4"
	     	                android:id="@+id/mETIpAddress"
	     	                />
     	    	</LinearLayout>
    
    
     	
     	     	<LinearLayout 
     	    android:layout_width="fill_parent"
     	    android:layout_height="wrap_content"
     	    android:orientation="horizontal">
	     	            	     	            <LinearLayout 
     	            android:id="@+id/lltest"
     	            
	     	        android:layout_width="wrap_content"
	     	        android:layout_height="wrap_content"
	     	        android:background="@drawable/layout_ontouch"
	     	        style="?android:attr/actionButtonStyle"
	     	        android:gravity="center">
	     	        <TextView 
	     	            android:text="测试"
	     	            android:layout_width="wrap_content"
	     	            android:layout_height="wrap_content"
	     	            android:textColor="#000000"
	     	            android:textSize="20dip"
	     	            />
     	    	</LinearLayout>
     	     	    
	     	            <LinearLayout 
     	            android:id="@+id/ll1"
     	                 	             android:layout_marginLeft="5dp"
     	            
	     	        android:layout_width="wrap_content"
	     	        android:layout_height="wrap_content"
	     	        android:background="@drawable/layout_ontouch"
	     	        style="?android:attr/actionButtonStyle"
	     	        android:gravity="center">
	     	        <TextView 
	     	            android:text="开始"
	     	            android:layout_width="wrap_content"
	     	            android:layout_height="wrap_content"
	     	            android:textColor="#000000"
	     	            android:textSize="20dip"
	     	            />
     	    	</LinearLayout>
     	    	     	        <LinearLayout 
     	            android:id="@+id/ll2"
     	             android:layout_marginLeft="5dp"
	     	        android:layout_width="wrap_content"
	     	        android:layout_height="wrap_content"
	     	        android:background="@drawable/layout_ontouch"
	     	        style="?android:attr/actionButtonStyle"
	     	        android:gravity="center">
	     	        <TextView 
	     	            android:text="预览"
	     	            android:layout_width="wrap_content"
	     	            android:layout_height="wrap_content"
	     	            android:textColor="#000000"
	     	            android:textSize="20dip"
	     	            />
     	    	</LinearLayout>
	     	            
     	        <LinearLayout 
     	            android:id="@+id/ll7"
     	             android:layout_marginLeft="5dp"
	     	        android:layout_width="wrap_content"
	     	        android:layout_height="wrap_content"
	     	        android:background="@drawable/layout_ontouch"
	     	        style="?android:attr/actionButtonStyle"
	     	        android:gravity="center">
	     	        <TextView 
	     	            android:text="服务端"
	     	            android:layout_width="wrap_content"
	     	            android:layout_height="wrap_content"
	     	            android:textColor="#000000"
	     	            android:textSize="20dip"
	     	            />
     	    	</LinearLayout>
     	        <LinearLayout 
     	            android:id="@+id/ll8"
	     	        android:layout_width="wrap_content"
	     	        android:layout_height="wrap_content"
	     	        android:layout_marginLeft="5dp"
	     	        android:gravity="center"
	     	        style="?android:attr/actionButtonStyle"
	     	        android:background="@drawable/layout_ontouch">

     	            <TextView
     	                android:layout_width="wrap_content"
     	                android:layout_height="wrap_content"
     	                android:text="客户端"
     	                android:textColor="#000000"
     	                android:textSize="20dip" />

     	    	</LinearLayout>
     	</LinearLayout>
</LinearLayout>

    <EditText
        android:id="@+id/et"
        android:layout_width="fill_parent"
        android:layout_above="@id/mllButton1"
        android:layout_height="fill_parent"
        android:layout_margin="30dp"
        android:clickable="false"
        android:editable="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center_vertical|left|top"
        android:inputType="textMultiLine"
        android:longClickable="false"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        android:textSize="15dp" >
        </EditText>
</RelativeLayout>